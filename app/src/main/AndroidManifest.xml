<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sebastian.devmonkey.capstoneproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Journal.AddJournal"
            android:theme="@style/HoloLight" />
        <activity
            android:name=".activity.Journal.UpdateDeleteJournal"
            android:theme="@style/HoloLight" />
        <activity
            android:name=".activity.ReadingPlans.PoemCategory"
            android:theme="@style/HoloLight" />
        <activity
            android:name=".activity.ReadingPlans.PoemStory"
            android:theme="@style/HoloLight" />

        <activity android:name=".activity.ReadingPlans.FlashCard"
            android:theme="@style/HoloLight"/>
    </application>

</manifest>